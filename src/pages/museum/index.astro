---
import MuseumLayout from '../../components/museum/MuseumLayout.astro';
import MuseumGallery from '../../components/museum/MuseumGallery.astro';
import type { MuseumProject } from '../../lib/github/types.js';
import museumConfig from '../../data/museum-config.json';

// Hardcoded museum data - no GitHub API calls
const projects: MuseumProject[] = museumConfig.repositories
  .filter(repo => !repo.hidden)
  .map(repo => ({
    id: repo.name,
    displayName: repo.displayName || repo.name,
    description: repo.customDescription || 'No description available',
    extendedDescription: repo.extendedDescription || null,
    language: repo.language || null,
    demoUrl: repo.demoUrl || null,
    githubUrl: `https://github.com/${museumConfig.owner}/${repo.name}`,
    homepage: repo.demoUrl || null,
    screenshot: repo.screenshot || null,
    screenshots: repo.screenshots || null,
    section: repo.section || null
  }));

const totalProjects = projects.length;

const pageTitle = "Project Museum | Emily's GitHub Projects";
const pageDescription = "An interactive museum showcasing Emily's open source projects and development work. Explore productivity tools, web applications, APIs, and more.";

// SEO and social sharing data
const ogImage = "/assets/social.png"; // Use existing social image
const keywords = [
  'GitHub projects',
  'open source',
  'Emily Flambe',
  'TypeScript',
  'JavaScript',
  'Python',
  'productivity tools',
  'web development',
  'portfolio'
].join(', ');
---

<MuseumLayout title={pageTitle} description={pageDescription}>
  <Fragment slot="header">
    <div class="museum-hero">
      <h1 class="hero-title">
        <span class="emoji-group">
          <span class="emoji emoji-1">üèõÔ∏è</span>
          <span class="emoji emoji-2">üè∫</span>
          <span class="emoji emoji-3">üñºÔ∏è</span>
        </span>
        <span class="title-main">Museum</span>
        <span class="emoji-group">
          <span class="emoji emoji-4">üèõÔ∏è</span>
          <span class="emoji emoji-5">üè∫</span>
          <span class="emoji emoji-6">üñºÔ∏è</span>
        </span>
      </h1>
      <p class="hero-description">
        LOOK ON MY WORKS YE MIGHTY AND DESPAIR
      </p>
    </div>
  </Fragment>
  
  
  <MuseumGallery 
    projects={projects} 
    layout="grid"
    showSearch={false}
    emptyMessage="No projects match your current filters. Try adjusting your selection."
  />
</MuseumLayout>

<!-- Enhanced SEO and Social Sharing -->
<Fragment slot="head">
  <meta name="keywords" content={keywords} />
  <meta name="author" content="Emily Flambe" />
  <meta name="robots" content="index, follow" />
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:title" content={pageTitle} />
  <meta property="og:description" content={pageDescription} />
  <meta property="og:image" content={ogImage} />
  <meta property="og:site_name" content="Emily Flambe" />
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={pageTitle} />
  <meta name="twitter:description" content={pageDescription} />
  <meta name="twitter:image" content={ogImage} />
  
  <!-- Structured Data for SEO -->
  <script type="application/ld+json">
    {JSON.stringify({
      "@context": "https://schema.org",
      "@type": "CollectionPage",
      "name": pageTitle,
      "description": pageDescription,
      "url": Astro.url.href,
      "author": {
        "@type": "Person",
        "name": "Emily Flambe",
        "url": "https://github.com/emily-flambe"
      },
      "mainEntity": {
        "@type": "ItemList",
        "numberOfItems": totalProjects,
        "itemListElement": projects.map((project, index) => ({
          "@type": "SoftwareSourceCode",
          "position": index + 1,
          "name": project.displayName,
          "description": project.description,
          "codeRepository": project.githubUrl,
          "programmingLanguage": project.language,
          "keywords": project.topics.join(', ')
        }))
      }
    })}
  </script>
</Fragment>

<style>
  .museum-hero {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-title {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin: 0 0 1.5rem 0;
  }

  .title-main {
    font-family: var(--font-family-serif);
    font-size: 1.2em;
    color: #ffffff;
  }

  .emoji-group {
    font-size: 2.5rem;
    display: inline-block;
  }

  .emoji {
    display: inline-block;
    animation-name: bounce;
    animation-timing-function: cubic-bezier(0.28, 0.84, 0.42, 1);
    animation-iteration-count: infinite;
  }

  /* Stagger the animations for a playful effect */
  .emoji-1 {
    animation-duration: 2.5s;
    animation-delay: 0s;
  }

  .emoji-2 {
    animation-duration: 3s;
    animation-delay: 0.4s;
  }

  .emoji-3 {
    animation-duration: 2.8s;
    animation-delay: 0.8s;
  }

  .emoji-4 {
    animation-duration: 3.2s;
    animation-delay: 0.2s;
  }

  .emoji-5 {
    animation-duration: 2.7s;
    animation-delay: 0.6s;
  }

  .emoji-6 {
    animation-duration: 2.9s;
    animation-delay: 1s;
  }

  /* Bouncing animation ONLY for emojis */
  @keyframes bounce {
    0%, 100% { 
      transform: translateY(0px);
    }
    50% { 
      transform: translateY(-8px);
    }
  }

  .hero-description {
    font-family: var(--font-family-serif);
    font-size: 1.15rem;
    line-height: 1.75em;
    color: var(--text-secondary);
    margin: 1.2em auto;
    max-width: 600px;
  }


  /* Mobile Responsive */
  @media (max-width: 768px) {
    .hero-title {
      flex-direction: column;
      gap: 0.5rem;
    }

    .title-main {
      font-size: 1.2em;
    }

    .hero-description {
      padding: 0 1rem;
    }
  }

  @media (max-width: 480px) {
    .title-main {
      font-size: 1.1em;
    }

    .hero-description {
      font-size: 1.1rem;
      margin: 1em auto;
    }
  }

  /* Accessibility improvements */
  @media (prefers-reduced-motion: reduce) {
    .emoji {
      animation: none;
    }
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .title-main {
      color: #ffffff;
    }
  }
</style>