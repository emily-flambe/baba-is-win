---
export const prerender = false;

import BaseLayout from '../../layouts/BaseLayout.astro';
import { getBlogPosts } from '../../lib/db/content';

const title = 'Blog';
const description = 'Latest articles.';
const permalink = `${Astro.site.href}blog`;

// Get D1 database from runtime environment
const db = Astro.locals.runtime.env.DB;

// Get current user for premium content handling
const user = Astro.locals?.user || null;
const isAdmin = user?.isAdmin === true;

// Fetch posts - include drafts for admins
let allPosts;
if (isAdmin) {
  const published = await getBlogPosts(db, { status: 'published', limit: 100 });
  const drafts = await getBlogPosts(db, { status: 'draft', limit: 100 });
  allPosts = [...drafts, ...published]; // Show drafts first
} else {
  allPosts = await getBlogPosts(db, { status: 'published', limit: 100 });
}

// Extract all unique tags
const tags = [...new Set(allPosts.flatMap(post => post.tags))]
  .filter(tag => tag)
  .sort();
---

<BaseLayout title={title} description={description} permalink={permalink} current="blog">
  <div class="container">
    <div class="tags-list">
      <p class="tags">
        Filter posts by tag:
        <br><i>
        {tags.map((tag, index) => (
          <>
            {index > 0 && ', '}
            <a href={`/tags/${tag}`}>{tag}</a>
          </>
        ))}
        </i>
      </p>
    </div>
    <hr />
    {allPosts.map((post, index) => {
      const href = `/blog/${post.slug}`;
      const imageUrl = post.thumbnail;
      const isEven = index % 2 === 0;
      const postTags = post.tags || [];
      const isPremium = post.premium === true;
      const isDraft = post.status === 'draft';

      return (
        <div>
          { index !== 0 && <hr /> }
          <div class={`post-item ${isEven ? 'image-left' : 'image-right'} ${isDraft ? 'draft' : ''}`}>
            {imageUrl && <img src={imageUrl} alt={post.title} class="post-image" />}
            <div class="post-content">

              <div class="post-item-footer">
                {isDraft && <span class="draft-badge">DRAFT</span>}
                <span class="post-item-date">{post.publishDate || 'No date'}</span>
              </div>
              <h2>
                <a href={href}>{post.title || 'Untitled'}</a>
                {isPremium && (
                  <a href="/login" class="premium-badge-inline">
                    ULTRA PREMIUM
                    <span class="premium-tooltip">You must be logged in to view this ULTRA PREMIUM content. Sorry pal</span>
                  </a>
                )}
              </h2>
              <p>{post.description}</p>

              <p style="font-size: 0.85em;">Tags:
              <br><i>
                {postTags.map((tag, index) => (
                  <>
                    {index > 0 && ', '}
                    <a href={`/tags/${tag}`}>{tag}</a>
                  </>
                ))}
              </i></p>
            </div>
          </div>
        </div>
      )
    })}
  </div>
</BaseLayout>

<style>
  h2,
  .post-item-footer {
    font-family: var(--font-family-sans);
    font-weight: 700;
  }

  .post-item-date {
    color: var(--text-secondary);
    text-align: left;
    text-transform: uppercase;
    margin-right: 16px;
  }

  .draft-badge {
    background: #f59e0b;
    color: #000;
    font-size: 0.7rem;
    padding: 0.2rem 0.5rem;
    border-radius: 3px;
    font-weight: 700;
  }

  .post-item.draft {
    border: 2px dashed #f59e0b;
    border-radius: 8px;
    padding: 1rem;
  }

  hr {
    margin: 60px auto;
  }

  .tags-list {
    margin-top: 20px;
  }

  .tags {
    font-size: 0.875em; /* Smaller font size for tags */
  }

  .post-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20px;
  }

  .post-content {
    flex: 1;
    margin: 0 20px;
  }

  .post-image {
    max-width: 300px; /* Adjust the size as needed */
    height: auto;
    padding: 0 10px; /* Add horizontal padding */
  }

  .image-left .post-image {
    order: -1; /* Image appears on the left */
  }

  .image-right .post-image {
    order: 1; /* Image appears on the right */
  }

  .post-content p i {
    font-size: 0.875em; /* Smaller font size for tags */
    font-style: italic; /* Italicize the tags */
  }

  .read-more-indicator {
    margin-top: 0.5rem;
    padding-top: 0.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .read-more-indicator span {
    color: var(--primary-color);
    font-size: 0.85rem;
    font-weight: 500;
    font-style: italic;
  }

  .post-item-footer {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .premium-badge-inline {
    display: inline-block;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 0.2rem 0.6rem;
    border-radius: 3px;
    font-size: 0.6rem;
    font-weight: bold;
    letter-spacing: 0.5px;
    margin-left: 1rem;
    vertical-align: middle;
    cursor: pointer;
    position: relative;
    text-decoration: none;
  }

  .premium-badge-inline:hover {
    transform: scale(1.05);
    box-shadow: 0 2px 8px rgba(102, 126, 234, 0.4);
  }

  .premium-tooltip {
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%);
    margin-bottom: 10px;
    padding: 8px 12px;
    background: #2a2a2a;
    color: #fff;
    font-size: 0.85rem;
    font-weight: normal;
    white-space: nowrap;
    border-radius: 4px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.4);
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s, visibility 0.3s;
    pointer-events: none;
    z-index: 1000;
  }

  .premium-tooltip::after {
    content: '';
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    border: 6px solid transparent;
    border-top-color: #2a2a2a;
  }

  .premium-badge-inline:hover .premium-tooltip {
    opacity: 1;
    visibility: visible;
  }
</style>
