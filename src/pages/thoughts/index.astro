---
export const prerender = false;

import BaseLayout from '../../layouts/BaseLayout.astro';
import Carousel from '../../components/Carousel.astro';
import { processSimpleMarkdown } from '../../utils/simpleMarkdown.js';
import { getThoughts } from '../../lib/db/content';

const title = 'Thoughts';
const description = 'Quick thoughts and musings - my personal micro-blog.';
const permalink = `${Astro.site.href}thoughts`;

// Get D1 database from runtime environment
const db = Astro.locals.runtime.env.DB;

// Check if user is admin
const user = Astro.locals.user;
const isAdmin = user?.isAdmin === true;

// Fetch thoughts - include drafts for admins
let allThoughts;
if (isAdmin) {
  // Fetch both published and draft thoughts for admins
  const published = await getThoughts(db, { status: 'published', limit: 200 });
  const drafts = await getThoughts(db, { status: 'draft', limit: 200 });
  allThoughts = [...drafts, ...published]; // Show drafts first
} else {
  allThoughts = await getThoughts(db, { status: 'published', limit: 200 });
}

// Group thoughts by date
const thoughtsByDate = allThoughts.reduce((acc, thought) => {
  const date = thought.publishDate || 'Unknown Date';
  if (!acc[date]) {
    acc[date] = [];
  }
  acc[date].push(thought);
  return acc;
}, {} as Record<string, typeof allThoughts>);
---

<BaseLayout title={title} description={description} permalink={permalink} current="thoughts">
  <div class="container">
    <p class="intro">GET OFF MY LAWN</p>

    <div class="thoughts-container">
      {Object.entries(thoughtsByDate).map(([date, thoughts]) => (
        <div class="date-group">
          {thoughts.map((thought) => {
            const href = `/thoughts/${thought.slug}`;
            const bgColor = thought.color || 'var(--background-body)';

            const isDraft = thought.status === 'draft';
            return (
              <>
                <h2 class="date-header">
                  <a href={href} class="date-header-link">
                    {isDraft && <span class="draft-badge">DRAFT</span>}
                    {thought.publishDate || 'No date'}
                    {thought.title && (
                      <span> - {thought.title}</span>
                    )}
                  </a>
                </h2>
                <article class={`thought-card ${isDraft ? 'draft' : ''}`} style={`background-color: ${bgColor};`}>
                <div class="thought-content">
                  <div class="thought-text" set:html={processSimpleMarkdown(thought.content)}></div>
                  {thought.images && thought.images.length > 0 && (
                    <div class="thought-images">
                      <Carousel images={thought.images} alt="Thought image" size="large" />
                    </div>
                  )}
                </div>
                <div class="thought-meta">
                  <div class="thought-meta-left">
                    <a href={href} class="thought-time-link">
                      <time>{thought.publishTime}</time>
                    </a>
                  </div>
                  {thought.tags && thought.tags.length > 0 && (
                    <span class="tags">
                      {thought.tags.map((tag, index) => (
                        <>
                          {index > 0 && ' '}
                          <span class="tag">#{tag}</span>
                        </>
                      ))}
                    </span>
                  )}
                </div>
              </article>
              </>
            );
          })}
        </div>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  .intro {
    color: var(--text-secondary);
    font-style: italic;
    margin-bottom: 3rem;
  }

  .thoughts-container {
    max-width: 600px;
    margin: 0 auto;
  }

  .date-group {
    margin-bottom: 3rem;
  }

  .date-header {
    font-family: var(--font-family-sans);
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--primary-color);
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--primary-color);
  }

  .date-header-link {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .date-header-link:hover {
    color: #fff;
  }

  .draft-badge {
    background: #f59e0b;
    color: #000;
    font-size: 0.7rem;
    padding: 0.15rem 0.4rem;
    border-radius: 3px;
    margin-right: 0.5rem;
    font-weight: 700;
  }

  .thought-card.draft {
    border-color: #f59e0b;
    border-style: dashed;
  }

  .thought-card {
    border: 1px solid var(--text-secondary);
    border-radius: 8px;
    margin-bottom: 1rem;
    transition: all 0.2s ease;
    position: relative;
  }

  .thought-card:hover {
    border-color: var(--primary-color);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .thought-time-link {
    color: inherit;
    text-decoration: none;
  }

  .thought-time-link:hover {
    text-decoration: underline;
  }

  .thought-content {
    padding: 1.5rem;
  }

  .thought-text {
    font-size: 1rem;
    line-height: 1.6;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  .thought-images {
    margin-top: 1rem;
  }

  .thought-content strong {
    font-weight: 600;
  }

  .thought-content em {
    font-style: italic;
  }

  .thought-content code {
    background: rgba(255, 255, 255, 0.1);
    padding: 0.125rem 0.25rem;
    border-radius: 3px;
    font-size: 0.85em;
    font-family: monospace;
  }

  .thought-content a {
    color: var(--primary-color);
    text-decoration: underline;
  }

  .thought-content a:hover {
    text-decoration: none;
  }

  .thought-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.875rem;
    color: var(--text-secondary);
    padding: 0 1.5rem 1.5rem 1.5rem;
  }

  .thought-meta-left {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .thought-meta time {
    font-family: var(--font-family-sans);
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    color: var(--primary-color);
    font-family: var(--font-family-sans);
    font-size: 0.8rem;
    opacity: 0.8;
    transition: opacity 0.2s ease;
  }

  .tag:hover {
    opacity: 1;
  }

  @media (max-width: 600px) {
    .thought-content {
      padding: 1rem;
    }

    .thought-meta {
      padding: 0 1rem 1rem 1rem;
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .thought-meta-left {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style>
