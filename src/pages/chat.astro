---
import BaseLayout from '../layouts/BaseLayout.astro';
import ChatInterface from '../components/ChatInterface.svelte';

const title = 'Chat with the Site';
const description = 'Ask me anything about Emily, her writing, or explore the content on this site';
const permalink = `${Astro.site.href}chat`;
---

<BaseLayout title={title} description={description} permalink={permalink} current="chat">
  <div class="chat-page">
    <header>
      <h1>AMA me anything</h1>
      <p class="subtitle">Don't you wish you could just ask other people questions? What would that be like?</p>
    </header>

    <div class="chat-container">
      <ChatInterface client:load />
    </div>
  </div>
</BaseLayout>

<style>
  .chat-page {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  header {
    text-align: center;
    margin-bottom: 2rem;
  }

  h1 {
    font-size: 2.5rem;
    font-family: var(--font-family-serif);
    color: #ffd4b3;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    font-size: 1.1rem;
    color: #ccc;
    margin: 0;
    font-family: var(--font-family-sans);
  }

  .chat-container {
    background: rgba(0, 0, 0, 0.4);
    border: 1px solid rgba(84, 142, 155, 0.3);
    border-radius: 12px;
    height: 70vh;
    min-height: 500px;
    max-height: 800px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
  }

  @media (max-width: 768px) {
    .chat-page {
      padding: 1rem 0.5rem;
    }

    h1 {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    .chat-container {
      height: calc(100vh - 200px);
      border-radius: 8px;
    }
  }
</style>
