---
import { ViewTransitions } from 'astro:transitions'
import '../styles/fonts.css'
import '../styles/global.css'

export interface Props {
  title: string
  description: string
  permalink: string
}

const { title, description, permalink } = Astro.props
const socialUrl = Astro.site.href + 'assets/best-friends.jpeg'
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width" />
<link rel="icon" type="image/png" href="/favicon.png" />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta name="author" content="Emily Cogsdill" />
<meta name="keywords" content="Emily Cogsdill, software engineer, web developer, programming, technology, blog, emily-flambe, GitHub, software development" />

<!-- Additional SEO -->
<meta name="robots" content="index, follow" />
<link rel="canonical" href={permalink} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={permalink} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={socialUrl} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={permalink} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={socialUrl} />

<!-- Structured Data for Personal Profile -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Emily Cogsdill",
  "alternateName": "emily-flambe",
  "jobTitle": "Software Engineer",
  "description": "Software engineer and web developer, just trying to have a good time",
  "url": "https://baba-is-win.pages.dev",
  "sameAs": [
    "https://github.com/emily-flambe",
    "https://www.linkedin.com/in/emilycogsdill",
    "https://www.instagram.com/emily_flambe",
    "https://www.twitch.tv/emilyFlambe"
  ],
  "knowsAbout": [
    "Software Engineering",
    "Web Development",
    "Programming",
    "Technology"
  ]
}
</script>

<ViewTransitions />
