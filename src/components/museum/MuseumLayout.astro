---
import BaseLayout from '../../layouts/BaseLayout.astro';

export interface Props {
  title: string;
  description: string;
  heroImage?: string;
}

const { title, description, heroImage } = Astro.props;
const permalink = Astro.url.href;
---

<BaseLayout title={title} description={description} permalink={permalink} current="museum">
  <div class="museum-container">
    <header class="museum-header">
      <slot name="header">
        <h1>{title}</h1>
        <p>{description}</p>
      </slot>
      {heroImage && (
        <div class="hero-image">
          <img src={heroImage} alt={title} />
        </div>
      )}
    </header>

    <div class="museum-content">
      <slot />
    </div>
  </div>
</BaseLayout>

<style>
  .museum-container {
    max-width: 90em;
    margin: 0 auto;
    padding: 0 0.5rem;
    background-color: var(--background-body);
    color: var(--text-main);
    font-family: var(--font-family-serif);
  }

  .museum-header {
    text-align: center;
    margin-bottom: 3rem;
    padding: 2rem 1rem;
    margin-bottom: 2rem;
  }

  .museum-header h1 {
    font-family: var(--font-family-serif);
    font-size: 3.5em;
    margin: 0 0 1em 0;
    color: #ffffff;
  }

  .museum-header p {
    font-size: 1.15rem;
    line-height: 1.75em;
    color: var(--text-secondary);
    margin: 1.2em auto;
    max-width: 600px;
  }

  .hero-image {
    margin-top: 2rem;
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  .hero-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .museum-content {
    width: 100%;
    margin: 0 auto;
  }

  /* Mobile Responsive */
  @media (max-width: 1020px) {
    .museum-header h1 {
      font-size: 3em;
    }
  }

  @media (max-width: 768px) {
    .museum-container {
      padding: 0 0.5rem;
    }

    .museum-header {
      padding: 1.5rem 1rem;
      margin-bottom: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .museum-header p {
      font-size: 1.1rem;
      margin: 1em auto;
    }
  }

</style>

