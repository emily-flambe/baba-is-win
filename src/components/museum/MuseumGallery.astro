---
import type { MuseumProject } from '../../lib/github/types.js';
import ProjectCard from './ProjectCard.astro';

export interface Props {
  projects: MuseumProject[];
  layout?: 'grid' | 'masonry' | 'list';
  showSearch?: boolean;
  emptyMessage?: string;
}

const { 
  projects, 
  layout = 'grid', 
  showSearch = false,
  emptyMessage = 'No projects found matching your criteria.'
} = Astro.props;

// Projects are already sorted by the API
const allProjects = projects;
---

<div class="museum-gallery" data-layout={layout}>


  {projects.length === 0 ? (
    <div class="empty-state">
      <div class="empty-icon">üîç</div>
      <h3>No Projects Found</h3>
      <p>{emptyMessage}</p>
    </div>
  ) : (
    <div class="gallery-container">
      <section class="projects-section">
        <div class={`projects-grid ${layout}`}>
          {allProjects.map(project => (
            <ProjectCard project={project} featured={false} />
          ))}
        </div>
      </section>
    </div>
  )}
</div>

<style>
  .museum-gallery {
    width: 100%;
    background: var(--museum-bg-primary);
    color: var(--museum-text);
  }

  .gallery-container {
    display: flex;
    flex-direction: column;
    gap: var(--museum-space-xl);
  }

  /* CSS Grid Layout - Pure CSS Solution */
  .projects-grid {
    width: 100%;
  }

  .projects-grid.grid,
  .projects-grid.masonry {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--museum-space-xl);
    align-items: stretch;
  }

  .projects-grid.list {
    display: flex;
    flex-direction: column;
    gap: var(--museum-space-md);
  }

  /* 16:10 Aspect Ratio Cards with Enhanced Hover Effects */
  .projects-grid .project-card {
    width: 100%;
    aspect-ratio: 16 / 10;
    transition: transform var(--museum-transition-slow), 
                box-shadow var(--museum-transition-slow);
    opacity: 1;
    margin: 0;
    border-radius: var(--museum-radius-lg);
    overflow: hidden;
    background: var(--museum-bg-primary);
    border: 1px solid var(--museum-border);
    box-shadow: var(--museum-shadow-card);
  }

  .projects-grid .project-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--museum-shadow-xl);
    border-color: var(--museum-border-hover);
  }

  .projects-grid.list .project-card {
    aspect-ratio: unset;
    margin-bottom: var(--museum-space-md);
  }

  /* Empty State - Museum Design System Integration */
  .empty-state {
    text-align: center;
    padding: var(--museum-space-3xl) var(--museum-space-xl);
    color: var(--museum-muted);
    background: var(--museum-bg-secondary);
    border-radius: var(--museum-radius-xl);
    border: 1px solid var(--museum-border);
    margin: var(--museum-space-xl) 0;
  }

  .empty-icon {
    font-size: var(--museum-text-5xl);
    margin-bottom: var(--museum-space-lg);
    opacity: 0.6;
    display: block;
  }

  .empty-state h3 {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: var(--museum-text-2xl);
    font-weight: 700;
    margin: 0 0 var(--museum-space-sm) 0;
    color: var(--museum-text);
  }

  .empty-state p {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: var(--museum-text-lg);
    line-height: 1.6;
    margin: var(--museum-space-md) auto;
    max-width: 400px;
    color: var(--museum-muted);
  }

  /* Responsive Design with Museum Breakpoints */
  @media (max-width: 768px) {
    .projects-grid.grid,
    .projects-grid.masonry {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: var(--museum-space-lg);
    }

    .gallery-container {
      gap: var(--museum-space-lg);
    }

    .empty-state {
      padding: var(--museum-space-2xl) var(--museum-space-lg);
    }

    .empty-icon {
      font-size: var(--museum-text-4xl);
    }
  }

  @media (max-width: 480px) {
    .projects-grid.grid,
    .projects-grid.masonry {
      grid-template-columns: 1fr;
      gap: var(--museum-space-md);
    }

    .gallery-container {
      gap: var(--museum-space-md);
    }

    .empty-state {
      padding: var(--museum-space-xl) var(--museum-space-md);
    }

    .empty-icon {
      font-size: var(--museum-text-3xl);
    }
  }

  /* Performance Optimizations */
  .projects-grid .project-card {
    will-change: transform, box-shadow;
    backface-visibility: hidden;
    transform-style: preserve-3d;
  }

  /* Accessibility Improvements */
  @media (prefers-reduced-motion: reduce) {
    .projects-grid .project-card {
      transition: none;
    }
    
    .projects-grid .project-card:hover {
      transform: none;
    }
  }

  @media (prefers-contrast: high) {
    .projects-grid .project-card {
      border-width: 2px;
      border-color: var(--museum-text);
    }
    
    .empty-state {
      border-width: 2px;
      border-color: var(--museum-text);
    }
  }

  /* Dark Theme Support */
  @media (prefers-color-scheme: dark) {
    .empty-state {
      background: var(--museum-bg-secondary);
    }
  }
</style>